{
  "editor.fontSize": 14,
  "editor.fontFamily": "'Dank Mono', 'fira code'",
  "editor.quickSuggestionsDelay": 30,
  "editor.wordBasedSuggestions": false,
  "editor.suggest.localityBonus": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.fontLigatures": true,
  "editor.snippetSuggestions": "top",
  "editor.lightbulb.enabled": false,
  "editor.glyphMargin": false,
  "workbench.colorTheme": "Cobalt2",
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": true,
  "workbench.settings.useSplitJSON": false,
  "workbench.settings.editor": "json", // always show json view
  "breadcrumbs.enabled": true,
  "search.searchOnType": false,
  "editor.minimap.enabled": false,
  "workbench.iconTheme": "vscode-icons",
  "vsicons.dontShowNewVersionMessage": true,
  "window.zoomLevel": 0,
  "files.insertFinalNewline": false,

  /** Terminal  */
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "'Dank Mono', 'fira code'",

  /** VIM */
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
        "before": ["<leader>", "c"],
        "commands": [
            "editor.action.copyLinesDownAction"
        ],
        "when": "editorTextFocus && !editorReadonly"
    }
  ],
  "vim.normalModeKeyBindings": [
    {
        "before": ["<leader>", "p"],
        "commands": [
            "workbench.action.showCommands"
        ]
    },
    {
        "before": ["<leader>", "s"],
        "commands": [
            "workbench.action.findInFiles"
        ]
    },
    {
        "before": ["<leader>", "t"],
        "commands": [
            "workbench.action.terminal.focus"
        ]
    },
    {
        "before": ["<leader>", "e"],
        "commands": [
            "workbench.view.explorer"
        ],
        "when": "viewContainer.workbench.view.explorer.enabled"
    },
    {
        "before": [",", "n"],
        "commands": [
            "workbench.action.toggleSidebarVisibility"
        ],
        "when": "!viewContainer.workbench.view.explorer.enabled"
    },

    {
        "before": ["<C-h>"],
        "commands": [
            "workbench.action.navigateLeft"
        ]
    },
    {
        "before": ["<C-j>"],
        "commands": [
            "workbench.action.navigateDown"
        ]
    },
    {
        "before": ["<C-k>"],
        "commands": [
            "workbench.action.navigateUp"
        ]
    },
    {
        "before": ["<C-l>"],
        "commands": [
            "workbench.action.navigateRight"
        ]
    },
    {
        "before": [",", "w", "s"],
        "commands": [
            "workbench.action.splitEditorDown"
        ]
    },
    {
        "before": [",", "w", "v" ],
        "commands": [
            "workbench.action.splitEditorRight"
        ]
    },
    {
        "before": ["<leader>", "g"],
        "commands": [
            "workbench.view.scm"
        ],
        "when": "workbench.scm.active"
    }
  ],
  "editor.lineNumbers": "relative",






  /** TODO Highlight */
  "todohighlight.exclude": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/dist/**",
    "**/.vscode/**",
    "**/.github/**",
    "**/_output/**",
    "**/*.min.*",
    "**/*.map",
    "**/.next/**",
    "**/vendor/**",
    "**/public/**"
  ],

  "todohighlight.keywords": [
    {
      "text": "QUESTION:",
      "color": "#ff0000",
      "backgroundColor": "yellow",
      "overviewRulerColor": "grey"
    },
    {
      "text": "NOTE:"
    }
  ],

  /** Git Lens */
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.views.repositories.branches.layout": "list",

  /** Possible Workspace settings */
  "editor.tabSize": 2,
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "emmet.triggerExpansionOnTab": true,

  "search.exclude": {
    "**/node_modules": true,
    "**/coverage": true,
    "**/dist": true,
    // "**/build": true
    "**/.build": true
  },

  /** Formatting */
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    // "source.organizeImports": true,
    "source.fixAll.eslint": true
  },
  // "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
  // "eslint.autoFixOnSave": true,

  // ESLint Extension: default is to only watch js and jsx files
  // "eslint.validate": ["typescript", "typescriptreact"],

  "diffEditor.ignoreTrimWhitespace": false,
  "git.ignoreLegacyWarning": true,
  "gitlens.advanced.messages": {
    "suppressGitVersionWarning": true
  },

  "workbench.activityBar.visible": true
}
