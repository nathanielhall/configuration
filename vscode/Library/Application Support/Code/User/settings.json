{
  "breadcrumbs.enabled": true,
  "editor.fontSize": 14,
  // "editor.scrollBeyondLastLine": false,
  "editor.fontFamily": "'Dank Mono', 'fira code'",
  "editor.quickSuggestionsDelay": 30,
  "editor.wordBasedSuggestions": false,
  "editor.suggest.localityBonus": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.lightbulb.enabled": false,
  "editor.glyphMargin": false,
  "editor.snippetSuggestions": "top",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.showKeywords": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.showKeywords": false
  },

  "workbench.colorTheme": "Cobalt2",
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": true,
  "workbench.settings.useSplitJSON": false,
  "workbench.settings.editor": "json", // always show json view
  "workbench.iconTheme": "vscode-icons",

  "search.searchOnType": false,
  "vsicons.dontShowNewVersionMessage": true,
  "files.insertFinalNewline": false,

  /** Terminal  */
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "'Dank Mono', 'fira code'",

  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },

  /** VIM */
  // TODO:
  // browse buffer (back/next)
  "vim.leader": "<space>",
  // "vim.sneak": true,
  // "vim.easymotion": true,


  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["<leader>", "c"],
      "commands": ["editor.action.copyLinesDownAction"],
      "when": "editorTextFocus && !editorReadonly"
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "b"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["workbench.action.navigateForward"]
    },
    {
        "before": ["H"],
        "after": ["^"]
    },
    {
        "before": ["L"],
        "after": ["$"]
    },
    {
        "before": ["Y"],
        "after": ["y", "$"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.terminal.focus"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.view.explorer"],
      "when": "viewContainer.workbench.view.explorer.enabled"
    },
    {
      "before": [",", "n"],
      "commands": ["workbench.action.toggleSidebarVisibility"],
      "when": "!viewContainer.workbench.view.explorer.enabled"
    },

    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.navigateLeft"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["workbench.action.navigateDown"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["workbench.action.navigateUp"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.navigateRight"]
    },
    {
      "before": [",", "w", "s"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": [",", "w", "v"],
      "commands": ["workbench.action.splitEditorRight"]
    },
    {
      "before": ["<leader>", "-"],
      "commands": ["workbench.action.decreaseViewSize"]
    },
    {
      "before": ["<leader>", "="],
      "commands": ["workbench.action.increaseViewSize"]
    },
    {
      "before": ["<leader>", "g"],
      "commands": ["workbench.view.scm"],
      "when": "workbench.scm.active"
    }
  ],
  "editor.lineNumbers": "relative",

  /** TODO Highlight */
  "todohighlight.exclude": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/dist/**",
    // "**/build/**",   // commented for Planner
    "**/.vscode/**",
    "**/.github/**",
    "**/_output/**",
    "**/*.min.*",
    "**/*.map",
    "**/.next/**",
    "**/vendor/**",
    "**/public/**"
  ],

  "todohighlight.keywords": [
    {
      "text": "QUESTION:",
      "color": "#ff0000",
      "backgroundColor": "yellow",
      "overviewRulerColor": "grey"
    },
    {
      "text": "NOTE:"
    }
  ],

  /** Git Lens */
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.views.repositories.branches.layout": "list",

  /** Possible Workspace settings */
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "ruby.intellisense": "rubyLocate",
  "emmet.triggerExpansionOnTab": true,

  "search.exclude": {
    "**/node_modules": true,
    "**/coverage": true,
    "**/dist": true,
    // "**/build": true
    "**/.build": true
  },

  /** Formatting */
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "editor.codeActionsOnSave": {
    // "source.organizeImports": true,
    "source.fixAll.eslint": true
  },
  "git.ignoreLegacyWarning": true,
  "gitlens.advanced.messages": {
    "suppressGitVersionWarning": true
  },
  "editor.cursorStyle": "line",
  "editor.insertSpaces": false,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "workbench.editor.showTabs": false,
  // "redhat.telemetry.enabled": false,
  // "security.workspace.trust.untrustedFiles": "open"
}
